@model List<RapidApiConsume.Models.Hotel>

@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Paris Otelleri</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Fotoğraf</th>
                <th>Otel Adı</th>
                <th>Puan</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>
                        <img src="@item.property.photoUrls?.FirstOrDefault()" alt="otel görseli" width="100" height="100" style="object-fit:cover;" />
                    </td>
                    <td>@item.property?.name</td>
                    <td>@item.property.reviewScore</td>
                    
                    <td>
                        <a href="#" class="btn btn-outline-primary btn-sm">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
